@model IEnumerable<FrontEnd2.ViewModels.ThreadVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.threadName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.threadDiscription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.threadKeyTerms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.threadCreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.threadNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.threadName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.threadDiscription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.threadKeyTerms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.threadCreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.threadNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div>
    @using (Html.BeginForm())
    {
        <input type="text" placeholder="Title" name="Title" />
        <input type="submit" value="Filter by thread title" />
    }
</div>
<div>
    @using (Html.BeginForm())
    {

        <input type="submit" value="Refresh" />
    }
</div>
