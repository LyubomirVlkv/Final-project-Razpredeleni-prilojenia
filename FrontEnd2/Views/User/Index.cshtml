@model IEnumerable<FrontEnd2.ViewModels.UserVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>

        
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userAge)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userAge)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


<div>
    @using (Html.BeginForm())
    {
        <input type="text" placeholder="Username" name="username" />
        <input type="submit" value="Filter by username" />
    }
</div>
<div>
    @using (Html.BeginForm())
    {

        <input type="submit" value="Refresh" />
    }
</div>
